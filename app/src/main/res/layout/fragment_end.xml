<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/play_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/end_play_socal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="#F20606"
            android:text="的风：1000"/>

    </RelativeLayout>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/end_play_again"
        android:layout_width="120dp"
        android:scaleType="fitXY"
        android:layout_height="50dp"
        android:src="@mipmap/play_again"/>

    <ImageView
        android:id="@+id/end_play_end"
        android:layout_width="120sp"
        android:scaleType="fitXY"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@mipmap/play_end_game" />

</LinearLayout>
